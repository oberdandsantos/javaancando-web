<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	    http://www.springframework.org/schema/beans 
	    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	    http://www.springframework.org/schema/context 
	    http://www.springframework.org/schema/context/spring-context-3.0.xsd">


	<bean id="cn" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
		<property name="url" value="jdbc:mysql://localhost:3306/db_eventos"></property>
		<property name="username" value="root"></property>
		<property name="password" value="p@ssword"></property>
	</bean>


	<bean id="eventosDao" class="br.com.allianz.jdbc.JdbcEventosDao">
		<property name="dataSource" ref="cn"></property>	
	</bean>

	<bean id="convidadosDao" class="br.com.allianz.jdbc.JdbcConvidadosDao">
		<property name="dataSource" ref="cn"></property>	
	</bean>


</beans>